<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE operations [
        <!ELEMENT operations (operation)+>
        <!ELEMENT operation (set)+>
        <!ATTLIST operation
                name CDATA #REQUIRED>
        <!ELEMENT set (ins)+>
        <!ELEMENT ins (reg1|reg2)*>
        <!ATTLIST ins
                mnemonic CDATA #REQUIRED>
        <!ELEMENT reg1 (#PCDATA)>
        <!ATTLIST reg1
                value CDATA #IMPLIED>
        <!ELEMENT reg2 (#PCDATA)>
        <!ATTLIST reg2
                value CDATA #IMPLIED>
        ]>
<operations>
    <operation name="nop">
        <set>
            <ins mnemonic="ret" />
        </set>
    </operation>
    <operation name="neg">
        <set>
            <ins mnemonic="neg">
                <reg1>dst</reg1>
            </ins>
        </set>
    </operation>
    <operation name="adc">
        <set>
            <ins mnemonic="adc">
                <reg1>dst</reg1>
                <reg2>src</reg2>
            </ins>
        </set>
    </operation>
    <operation name="clc">
        <set>
            <ins mnemonic="clc" />
        </set>
    </operation>
    <operation name="clear">
        <set>
            <ins mnemonic="xor">
                <reg1>dst</reg1>
                <reg2>dst</reg2>
            </ins>
        </set>
    </operation>
</operations>